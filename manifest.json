{
    "manifest_version": 2,

    "name": "Atomic CSS Helper",
    "description": "Convert between Atomic and Regular CSS",
    "version": "1.1",
    "devtools_page": "devtools.html",

    "browser_action": {
        "default_icon": "img/acss.png",
        "default_title": "Convert CSS/ACSS",
        "default_popup": "popup.html"
    },

    "background":{"scripts":["js/background.js"]},

    "permissions": [
        "activeTab"
    ]
}
